Xft.autohint: 1
Xft.antialias: 1
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

!-XTerm specific defaults
*.faceName: 	Monospace Regular 
*.faceSize: 	12
*.renderFont: 	true
*.allowBoldFonts:	false
*.selectToClipboard:	true
*.vt100.translations: #override \n\
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus: larger-vt-font() 
  Ctrl Shift <Key>V:	insert-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)
*.vt100.scrollBar: true
*.vt100.scrollbar.width: 8
*.vt100.rightScrollBar:	true
*.saveLines:	20000

!-RXVT specific defaults
*.font:	xft:monospace:regular:size=12
*.letterSpace:	-1
*.perl-ext-common:	clipboard,resize-font
*.clipboard.autocopy: true
*.keysym.M-c: perl:clipboard:copy
*.keysym.M-v: perl:clipboard:paste



